<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- App branding color for the app bar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for the text containing the questions in the quiz -->
    <style name="QuestionTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name ="android:layout_marginTop">16dp</item>
        <item name ="android:layout_marginBottom">16dp</item>
        <item name ="android:layout_marginLeft">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Style for Radio Button text containing possible answers in the quiz -->
    <style name="RadioButtonTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name ="android:layout_marginLeft">16dp</item>
        <item name ="android:paddingLeft">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Style for CheckBox text containing possible answers in the quiz -->
    <style name="CheckBoxTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name ="android:layout_marginLeft">16dp</item>
        <item name ="android:paddingLeft">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Style for EditText containing possible answers in the quiz -->
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <!-- hide keyboard after typing -->
        <item name="android:imeOptions">actionDone</item>
    </style>

</resources>